<SoundSourceTimeline>
	size: 10, 10
	canvas:
		Color:
			rgba: self.color
		Ellipse:
			pos: self.pos
			size: 10,10
<SourcesArea>
	orientation:'horizontal'
	canvas:
		Color:
			rgba: 0,1,0,0.5
		Line:
			width: 2
			rectangle: (0,0,640,480)
	
		Color:
			rgba: 0,0,0,0
		Rectangle:
			pos: self.pos
			size: self.size
		
<ColorSelector>
	picker: picker
	button_ok: button_ok
	orientation:'vertical'
	ColorPicker:
		id: picker
		size_hint_y: 0.9
	Button:
		id: button_ok
		size_hint_y: 0.1
		text: "ok"

<SourceButton>
	text: "no name"
	canvas:
		Color:
			rgba: self.marker_color
		#Line:
		#	width: 2
		#	rectangle: (self.x,self.y+self.height/2 -15,30,30)
		Ellipse:
			pos: self.x,self.y+self.height/2 -5
			size: 10,10
	
<SourceWidget>
	sources_area: sources_area
	label_area: label_area
	BoxLayout:
		orientation:'horizontal'
		SourcesArea:
			id: sources_area
			size_hint_x: 0.8
		BoxLayout:
			id: label_area
			size_hint_x: 0.2
			orientation:'vertical'
			#Button:
			#	text: "ccc"
